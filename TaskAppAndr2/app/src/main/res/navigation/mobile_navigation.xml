<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.taskapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_formFragment"
            app:destination="@id/formFragment">
            <argument
                android:name="arguments"
                app:argType="string"
                android:defaultValue="@null"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.taskapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_formFragment"
            app:destination="@id/formFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.taskapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications"/>

    <fragment
        android:id="@+id/formFragment"
        android:name="com.example.taskapp.ui.form.FormFragment"
        android:label="Form"
        tools:layout="@layout/fragment_form" >
        <argument
            android:name="arguments"
            app:argType="string"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.taskapp.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/boardFragment"
        android:name="com.example.taskapp.ui.board.BoardFragment"
        android:label="fragment_board"
        tools:layout="@layout/fragment_board" >
        <action
            android:id="@+id/action_boardFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/phoneFragment"
        android:name="com.example.taskapp.ui.auth.PhoneFragment"
        android:label="fragment_board"
        tools:layout="@layout/fragment_board" />


</navigation>