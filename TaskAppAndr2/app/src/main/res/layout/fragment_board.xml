    <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
        android:id="@+id/spring_dots_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:dampingRatio="0.2"
        app:dotsColor="#1131D8"
        app:dotsStrokeColor="#1131D8"
        app:dotsCornerRadius="100dp"
        app:dotsSize="16dp"
        app:dotsSpacing="10dp"
        app:dotsStrokeWidth="2dp"
        app:stiffness="300"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        />


    <Button
        android:id="@+id/btnSkipViewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#D3D2CF"
        android:drawableRight="@drawable/ic_arrow_list"
        android:text="@string/skipBtn"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


