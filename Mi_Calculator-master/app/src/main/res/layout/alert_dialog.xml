<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/unit_pick_layout_back"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingBottom="20dp"
    >

    <TextView
        android:id="@+id/select_unit_numeral"
        style="@style/unite_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please be mindfull."
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alert_text"
        style="@style/unite_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mind if you click 'Carry on' the data will be deleted!"
        android:textAlignment="center"
        android:paddingTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_unit_numeral"
        app:layout_constraintBottom_toTopOf="@+id/btn_yes"
        />

    <TextView
        android:id="@+id/btn_yes"
        style="@style/btn_cancel_style"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/unit_cancel_background"
        android:backgroundTint="@color/purple_500"
        android:padding="10dp"
        android:text="carry on"
        app:layout_constraintBottom_toTopOf="@+id/cancel_alert_dialog"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/cancel_alert_dialog"
        style="@style/btn_cancel_style"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/unit_cancel_background"
        android:padding="10dp"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>