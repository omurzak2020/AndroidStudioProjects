<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:background="@drawable/backgr_item_menu"
    android:elevation="30dp"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/history_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/about_menu"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="30dp"
        android:padding="10dp"
        android:background="@drawable/backgr_item_menu"
        >
    <ImageView
        android:id="@+id/history_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_history"
        app:layout_constraintRight_toLeftOf="@+id/history_text"
        app:layout_constraintTop_toTopOf="@+id/history_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/history_text"
        />

    <TextView
        android:id="@+id/history_text"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="History"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center_vertical|center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/history_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/about_menu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/history_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="30dp"
        android:padding="10dp"
        android:background="@drawable/backgr_item_menu"
        >

    <ImageView
        android:id="@+id/about_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_info"
        app:layout_constraintTop_toTopOf="@id/about_text"
        app:layout_constraintBottom_toBottomOf="@+id/about_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/about_text"/>

    <TextView
        android:id="@+id/about_text"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="About"
        android:gravity="center_vertical|center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/about_icon"
        app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>