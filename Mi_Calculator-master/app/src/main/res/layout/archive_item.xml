<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/archive_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <View
        android:id="@+id/archive_divider"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/figures_text_view"
        android:background="#B1AEAE"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/figures_text_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="test"
        android:textColor="#878484"
        android:textSize="15sp"
        android:paddingEnd="10dp"
        android:textAlignment="textEnd"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/figures_txtresult_view"
        />

    <TextView
        android:id="@+id/figures_txtresult_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#FF878484"
        android:text="test2"
        android:textSize="15sp"
        android:textAlignment="textEnd"
        android:maxLines="1"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/figures_text_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>